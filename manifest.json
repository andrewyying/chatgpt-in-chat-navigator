{
  "manifest_version": 3,
  "name": "ChatGPT In-Chat Navigator",
  "version": "0.1.0",
  "description": "Sidebar index of your questions + collapse/expand assistant replies on chatgpt.com",
  "permissions": ["storage"],
  "host_permissions": ["https://chatgpt.com/*"],
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}