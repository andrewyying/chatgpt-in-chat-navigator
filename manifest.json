{
  "manifest_version": 3,
  "name": "ChatGPT Navigator - Jump Between Questions, Fold Long Answers, Stay Focused",
  "version": "0.1.1",
  "description": "Jump between questions. Fold long answers. Stay focused.",
  "permissions": ["storage"],
  "host_permissions": ["https://chatgpt.com/*"],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
